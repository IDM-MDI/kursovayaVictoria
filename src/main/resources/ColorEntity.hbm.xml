<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="course.by.zhukova.entity.ColorEntity" table="color" schema="shoes_shop">
        <id name="idcolor">
            <column name="idcolor" sql-type="int"/>
            <generator class="increment"/>
        </id>
        <property name="colorName">
            <column name="colorName" sql-type="varchar(20)" length="20"/>
        </property>
        <set name="productsByIdcolor" inverse="true">
            <key>
                <column name="productColorID"/>
            </key>
            <one-to-many not-found="ignore" class="course.by.zhukova.entity.ProductEntity"/>
        </set>
    </class>
</hibernate-mapping>